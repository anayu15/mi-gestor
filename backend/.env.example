# Server
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/migestor
DB_HOST=localhost
DB_PORT=5432
DB_NAME=migestor
DB_USER=postgres
DB_PASSWORD=password

# JWT
JWT_SECRET=change-this-to-a-very-secure-random-string-in-production
JWT_EXPIRES_IN=7d

# OCR
TESSERACT_LANG=spa
TESSERACT_CACHE_DIR=/tmp/tesseract-cache

# Vision API for Invoice OCR
VISION_PROVIDER=claude
CLAUDE_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-your-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20240620
OPENAI_MODEL=gpt-4-vision-preview
MAX_OCR_IMAGE_SIZE=5242880
VISION_API_TIMEOUT=30000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@migestor.es

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
OCR_RATE_LIMIT_MAX=10

# CORS
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug
